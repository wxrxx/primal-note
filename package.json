{
  "name": "primal-note",
  "private": true,
  "version": "1.0.1",
  "description": "Primal Note - แอปวางแผนชีวิตสำหรับวัยรุ่น",
  "author": "Primal Note Team",
  "main": "electron/main.cjs",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:build:beta": "npm run build && electron-builder --win -c.publish.provider=github -c.publish.owner=wxrxx -c.publish.repo=primal-note -c.publish.channel=beta",
    "electron:build:prod": "npm run build && electron-builder --win --publish always",
    "electron:build:local": "npm run build && electron-builder --win -c.publish.provider=generic -c.publish.url=http://localhost:5000",
    "electron:serve-updates": "npx http-server release -p 5000",
    "electron:pack": "npm run build && electron-builder --dir"
  },
  "dependencies": {
    "@resvg/resvg-js": "^2.6.2",
    "date-fns": "^3.3.1",
    "electron-log": "^5.4.3",
    "electron-squirrel-startup": "^1.0.0",
    "electron-updater": "^6.7.3",
    "firebase": "^12.8.0",
    "jimp": "^1.6.0",
    "png-to-ico": "^3.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "vite": "^5.1.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.primalnote.app",
    "productName": "Primal Note",
    "publish": [
      {
        "provider": "github",
        "owner": "wxrxx",
        "repo": "primal-note"
      },
      {
        "provider": "generic",
        "url": "http://localhost:5000"
      }
    ],
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "public/**/*"
    ],
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "forceCodeSigning": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Primal Note"
    }
  }
}